#!/bin/bash
# Sling slides
echo "Building slides $1 ..."

. /home/seaman/bin/bash-vars

# Go to the directory
cd /home/seaman/Documents/Slides

# Copy the template files
rsync -auv template/ $1 &&

# Create the presentation
cp text/$1.txt $1 &&
cat $1/$1.txt | template/bin/sling.py -t > $1/$1-timed.html &&
cat $1/$1.txt | template/bin/sling.py    > $1/$1.html       &&
mv slide_config.js $1 

