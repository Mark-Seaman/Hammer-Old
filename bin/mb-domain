#!/usr/bin/env python

from sys import argv
from os import environ

# Map the file to a domain name
def domain(doc):
    for l in open(environ['y']+'/Domains').read().split('\n'):
        pair = l.split(' ')
        if len(pair)>1 and doc.find(pair[1])!=-1:
            return doc.replace('MyBook/'+pair[1],pair[0])


# Map the domain for a document
if len(argv)<2: 
    print 'Usage: mb-domain MyBook/Home'
else:
    #print 'Map the domain for document', argv[1]
    print domain(argv[1])
