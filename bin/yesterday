#!/usr/bin/python
# Print the date yesterday

from datetime import datetime,timedelta
from sys      import argv


# Subtract one day and convert to string
def str_yesterday(d):
    return (d - timedelta(days=1)).strftime("%Y-%m-%d")

# Convert a string to a date
def to_date(s):
    return datetime.strptime(s, "%Y-%m-%d")

# If no argument then use now
if len(argv)<2:
    print str_yesterday(datetime.now())
else:
    print str_yesterday(to_date(argv[1]))

   
