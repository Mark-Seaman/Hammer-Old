#!/bin/bash
# Start working on the simple project

# Vars
export p=$HOME/Projects/Hammer
export book=$HOME/Documents/Leverage/docs
export mb=$HOME/Documents/book
export gh='Shrinking-World/Hammer'
export phip=54.244.95.205
export ph=ubuntu@$phip
export pa=$p/app
export pb=$p/bin
export pd=$p/docs
export pt=$p/test

# Use chrome if available
[ -x /opt/google/chrome/google-chrome ] && 
export browser=/opt/google/chrome/google-chrome

# Aliases
alias bc='book commit'
alias be='book edit'
alias bl='book list'
alias br='book read'
alias bs='book status'
alias bt='book test'
alias ce='cmd edit'
alias cl='cmd list'
alias cs='cmd show'
alias ct='cmd test'
alias de='doc edit'
alias dl='doc list'
alias dt='doc test'
alias g='grep'
alias gas='git add -A .; git status'
alias gc='git commit -m'
alias gco='git checkout'
alias gd='git diff --color-words --word-diff'
alias gre='git reset HEAD'
alias grh='git reset --hard'
alias grm='git rm'
alias gs='git status'
alias gsa='git stash apply'
alias gsc='git stash clear'
alias gsl='git stash list'
alias gsp='git stash pop'
alias gss='git stash save'
alias gv='grep -v'
alias hammer=". ~/Projects/Hammer/bin/project-env"
alias od='outline diff'
alias oe='outline edit'
alias os='outline show'
alias ot='outline test'
alias papp="cd $pa"
alias pbin="cd $pb"
alias pdoc="cd $pd"
alias proot="cd $p"
alias ptest="cd $pt"
alias pull='git pull'
alias push='git pull && git push'
alias s='search'
alias te='tst edit'
alias tl='tlike'
alias tre='tst list; tstat'
alias ts='tst show'


# Path

export PATH=\
$p/bin:\
$p/test:\
$p/socket:\
/bin:\
/sbin:\
/usr/bin:\
/usr/local/bin:\
/opt/local/bin:\
/usr/local/texlive/2014basic/bin/universal-darwin/:\
~/bin

export _OLD_VIRTUAL_PATH=$PATH

export PYTHONPATH=$pb:$p/env/lib/python2.7/site-packages

# Directory
cd $p

# Show the banner
cat $pb/welcome

# Use virtualenv
. $p/env/bin/activate
echo "python = `which python`"
echo

path


