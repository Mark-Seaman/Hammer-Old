#!/bin/bash
# Send a brain article through email

# No args means send a random topic
if [ "$1" == "" ] 
then
    topic=`brain-pick`
    echo "Sending the file $topic"
    brain-send 'mark.b.seaman@gmail.com' $topic $topic
    exit 0
fi

# Pick off the args
to=$1
topic=$2
subject=$3

# Set defaults
[[ -z "$to" ]] && to='mark.b.seaman@gmail.com'
[[ -z "$topic" ]] && topic='Home'
[[ -z "$subject" ]] && subject="Exterior Brain: $topic"

# Send the message
echo "Send $topic to $to with title $subject"
brain-html "$topic" | send-html "$to" "$subject"

