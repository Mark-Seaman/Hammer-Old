#!/bin/bash

if [ ! -d "$1" ]
then
  echo "$1 does not exist"
  echo -n "Continue the update (y|n) ? "
  read answer
  [[ "$answer" != "y" ]] && exit 1 
fi

if [ ! -d "$2" ]
then
  echo "$2 does not exist"
  echo -n "Continue the update (y|n) ? "
  read answer
  [[ "$answer" != "y" ]] &&  exit 1
fi

nice rsync -auv --delete "$1/" "$2" | egrep -v '/$'
