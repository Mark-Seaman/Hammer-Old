#!/bin/bash
# Setup iPython with all of its libraries


# Install components as Super User
sudo apt-get build-dep -y python-matplotlib
sudo apt-get install   -y ipython-notebook


# Create a Python virtualenv for Python 3
virtualenv --no-site-packages --distribute -p /usr/bin/python3.4 env

# Activate the virutalenv
. env/bin/activate


# IPython notebook & pandas
pip install ipython[notebook]
pip install pandas
pip install matplotlib sympy
