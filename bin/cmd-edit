#!/usr/bin/python3
# Edit the correct command file

from os import environ, system
from os.path import exists,join
from sys import argv


# Edit the file
def cmd_edit(f):
    path = join(environ['pb'],f)
    if exists(path):
        print ("Edit the command file, "+path)
        system ('e '+path)
    else:
        print ("No file exists, "+path)
  

# When run stand alone then do the test
if __name__ == "__main__":
    if len(argv)>1:
        cmd_edit(argv[1])
    else:
        print ('Need a file')


  
