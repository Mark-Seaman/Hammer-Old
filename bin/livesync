#!/bin/bash

. /home/seaman/bin/bash-vars

{
    date

    #--------------------------------------------------------
    # Hummer

    if [ "seaman-hummer" == `hostname` ]
    then   
        s
        #wm-sync
        return 0
    fi

    #--------------------------------------------------------
    # Chute

    if [ "seaman-chute" == `hostname` ]
    then
        s
        music-save
        music-changes
        synchronize /home/seaman/LiveSync/Archive   $z:LiveSync/Archive     prune-archive
        synchronize /home/seaman/LiveSync/Git       $z:LiveSync/Git         prune-archive
        synchronize /home/seaman/LiveSync/Music     $z:LiveSync/Music       prune-music
        synchronize /home/seaman/LiveSync/Pictures  $z:LiveSync/Pictures    prune-pictures
        synchronize /home/seaman/LiveSync/Video     $z:LiveSync/Video

        nice rsync -auv --delete /home/seaman/Archive/rcp/ $z:LiveSync/Rcp
        return 0
    fi

    #--------------------------------------------------------
    # Server

    if [ "seaman-server" == `hostname` ]
    then
        s
        prune-archive
        prune-music
        #prune-secure
        return 0
    fi

    #--------------------------------------------------------
    # Family

    if [ "seaman-family" == `hostname` ]
    then
        echo "Nothing to do"
        return 0
    fi

    #--------------------------------------------------------
    # Mini

    if [ "seaman-mini" == `hostname` ]
    then
        #synchronize /home/seaman/bin          $z:bin          prune-bin
        #synchronize /home/seaman/Documents    $z:Documents    prune-docs

        #rsync -auv  /home/seaman/Music/vinyl/ $z:LiveSync/Music/Vinyl
        return 0
    fi

    date
} 2>&1 | mklog livesync

