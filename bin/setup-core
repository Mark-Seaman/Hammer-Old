#!/bin/bash
# This file contains useful tools that should be set up on each new Linux system

sudo apt-get update

# Programming
sudo apt-get install -y  redis-server
sudo apt-get install -y  sun-java6-jre
sudo apt-get install -y  g++
sudo apt-get install -y  irb
sudo apt-get install -y  ruby

# files
sudo apt-get install -y  tree
sudo apt-get install -y  spell
sudo apt-get install -y  rsync
sudo apt-get install -y  rsnapshot
sudo apt-get install -y  p7zip-full

# Kee Pass
sudo apt-get install -y  keepass2

# git 
sudo apt-get install -y  git
sudo apt-get install -y  git-core
sudo apt-get install -y  gitk
sudo apt-get install -y  meld

# internet
sudo apt-get install -y  curl
sudo apt-get install -y  filezilla
sudo apt-get install -y  smbclient
sudo apt-get install -y  openssh-server

# edit/create
sudo apt-get install -y  figlet
sudo apt-get install -y  vim-nox
sudo apt-get install -y  gimp

# system
sudo apt-get install -y  gnome-panel
sudo apt-get install -y  yum
sudo apt-get install -y  nmap
sudo apt-get install -y  hwinfo
sudo apt-get install -y  acpi
sudo apt-get install -y  pv
sudo apt-get install -y  gparted

# emacs
sudo apt-get install -y  emacs
sudo apt-get install -y  emacs-nox
sudo apt-get install -y  muse-el
sudo apt-get install -y  tomboy

# ipython
sudo apt-get install -y ipython-notebook
sudo apt-get install -y python-matplotlib
sudo apt-get install -y python-scipy
sudo apt-get install -y python-pandas
sudo apt-get install -y python-nose
#sudo apt-get install -y python-sympy
