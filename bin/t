#!/bin/bash
# Run a teminal window and login to the remote machine

# Select the correct host
host=$1

# Spawn an ssh shell if there is an argument
if [ "$1" != "" ]
then
    echo "Connecting to $1"
    echo "ssh $host" > /tmp/target  
    #echo "ssh -X $host" > /tmp/target  
else
    echo 'Running a local shell'
    echo "bash" > /tmp/target  
fi

# bring up a shell in a gray window
chmod 700 /tmp/target
gnome-terminal --window-with-profile=Target --geometry=90x45

# Enable this to debug the t script
#echo /tmp/target
#cat  /tmp/target
