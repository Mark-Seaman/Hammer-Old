#!/bin/bash
# Send a topic as an email from mybook

base="$1"
page="$2"

wget -O "/tmp/mb-page.html" "http://$base/$page"
cat /tmp/mb-page.html                                       | 
sed "s/href\='\//href='http:\/\/$base\//"                   |
sed "s/href\=\"\([^h\/]\)/href=\"http:\/\/$base\/\1/"       |
sed "s/href\=\"\//href=\"http:\/\/$base\//" 


