#!/usr/bin/python
# Create a schedule for sending a Dr Prof Tips article
print '# Create a schedule for sending a Dr Prof Tips article'

from files import read_file
from sys import argv
from os import system

blog = "SeamansLog"
if (len(argv)>3): blog = argv[3]

if (len(argv)<3):
    print "usage: blog-schedule article title"
    exit (1)

output=open('/home/seaman/Documents/Brain/'+blog+'Queue', 'w')

for subscriber in read_file('/home/seaman/Documents/Brain/'+blog+'Subscribers'):
    output.write('blog-send ' + subscriber + ' ' + argv[1] + ' "'+argv[2]+'" '+blog+'\n')
output.close()

system ('sh /home/seaman/Documents/Brain/'+blog+'Queue')
