#!/bin/bash
# Create a new Django command

echo Create a new Django command $1 $2
cmd=$2

cd $1

# Create directory
mkdir -p management
mkdir -p management/commands

# Create the module
touch management/__init__.py
touch management/commands/__init__.py
chmod +x management/__init__.py management/commands/__init__.py

# Create the command file
cat <<EOF > management/commands/$cmd.py
from django.core.management.base import BaseCommand
#from xxx.models import *

class Command(BaseCommand):

    print "Not yet implemented"
    exit(1)

EOF

cd ..
manage.py $cmd
