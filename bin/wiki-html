#!/usr/bin/python
from os.path        import isfile
from sys            import argv
from wiki           import convert_html, get_title
from files          import read_file

html_template = '''<html>
  <head>
    <title>%s</title>
    <!-- Bootstrap -->
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="../pipescan/public/js/bootstrap.min.js"></script>
    <link href="../pipescan/public/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <blockquote>
%s
    </blockquote>
  </body>
</html>
'''

# Create html file contents from the file
def page_html(path):
    if isfile(path): 
        text = read_file(path)
    else:
        text = [ path, 'File not found, '+path ]
    return html_template % (get_title(text),convert_html(text))

# Format the file as HTML
print page_html(argv[1])
