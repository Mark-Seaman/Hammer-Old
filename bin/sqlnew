#!/bin/bash
# Create a new database from the command line

# Usage:
#   sqlnew seaman     mds959SQ 
#   sqlnew shrinking  mds959SQ 
#   sqlnew mybook     mds959SQ 

database=seaman_$1
user=seaman_$1
password=`cat $b/sqluser`
datafile=$2
rootpasswd=`cat $b/sqlroot`

# Output the results      
echo "Database: $database"
echo "User:     $user"
echo "Password: $password"
echo "Root Password: $rootpasswd"
echo "SQL file: $datafile"

# Create the database
sqlcreatedb $database $user $password $rootpasswd

# Reload the data from a SQL file
mysql -u$user -p$password $database < $datafile
