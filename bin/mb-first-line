#!/usr/bin/python    
# Fix the first line from every file

from files  import read_file, list_files, write_file
from sys    import argv

def check_directory(dirname):
    for f in list_files(dirname):
        check_file(dirname+'/'+f)        

def check_file(filename):
    text = read_file(filename)
    if text!=None and text[0][0]!='*':
       text = fix_first_line(text)
       write_file(filename, text)
       print text[0]

def fix_first_line(text):
    text[0] = fix_line(text[0])
    return text

def fix_line(line):
    x = line.find('  ')
    line = '* '+line[:x+1]+'*'+line[x:]
    return line

check_directory("/home/seaman/Documents/MyBook/"+argv[1])


