#!/bin/bash
# Invite someone to read this blog

blog='SeamansLog'
invited=`grep -i $1 $br/${blog}Invited`

if [ "$invited" == "" ]
then
    echo Inviting $1
    paragraphs $y/${blog}/Invite | send "$1" "Ideas about technology"
    echo $1 >> $br/${blog}Invited
else
    echo "Already invited $invited"
fi