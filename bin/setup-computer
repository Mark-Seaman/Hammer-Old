#!/bin/bash
# Configure a new computer

# Set up the project context
. ~/Documents/bin/project

# Remove any extra directories in the root
cd
rm -rf Downloads Templates Videos Public
mkdir -p Archive Projects Desktop/Junk

[ -d Pictures ] && mv Pictures Archive

# Setup the root bin directory 
[ ! -f ~/bin ] && ln -s ~/Documents/bin ~/bin

# Setup the root RC file
mv  ~/.bashrc ~/.bashrc-original
cp ~/bin/bashrc     ~/.bashrc 
cp ~/bin/emacs.conf ~/.emacs

