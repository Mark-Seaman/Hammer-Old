#!/bin/bash
# Start working on the simple project

. $HOME/Projects/Hammer/bin/settings-private

# Vars
export p=$HOME/Projects/Hammer
export pa=$p/app
export pb=$p/bin
export pd=$p/docs
export pt=$p/test

# Aliases
alias ae="app edit"
alias as='app search'
alias ce="cmd edit"
alias da="doc add"
alias de="doc edit"
alias dl="doc list"
alias ep='e $pb/project'
alias g='grep'
alias gac='git add -A .; gc'
alias gas='git add -A .; git status'
alias gc='git commit -m '
alias gco='git checkout'
alias gd='git diff'
alias gre='git reset HEAD'
alias grh='git reset --hard'
alias grm='git rm'
alias gs='git status'
alias h='history|tail -40'
alias home='. ~/.profile'
alias ls='ls -FG'
alias ll='ls -lF'
alias le='less'
alias pull='git pull'
alias push='git pull && git push'
alias qt='python $pb/qt.py'
alias run='ocean runserver'
alias te='tst edit'
alias tl='tst like'
alias tres='tst results|less'

# Path variable
export PATH=\
$p/bin:\
/bin:\
/sbin:\
/usr/bin:\
/usr/local/bin:\
/opt/local/bin:\
~/bin

# Python context
cd $p
cat bin/welcome

export _OLD_VIRTUAL_PATH=$PATH
export PYTHONPATH=$pb:$p/env/lib/python2.7/site-packages

. bash-prompt

[ -f ~/Tools/env-python27/bin/activate ] &&
. ~/Tools/env-python27/bin/activate
echo "Active python = `which python`"
echo

path

