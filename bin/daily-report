#!/bin/bash
# Send a report of the daily process run

. ~/bin/bash-vars

report=/tmp/daily-report
{
    echo '-----------------------------------------------' 
    echo "Seaman Daily News" `date`
    echo '-----------------------------------------------' 

    lesson

    echo '-----------------------------------------------' 
    echo "Things to do"
    echo '-----------------------------------------------' 
    cat $br/Calendar $br/Home |
    sed 's/\*\*//g' |
    sed 's/\[\[//g' |
    sed 's/\]\]//g'

    space
    lc /home/seaman/Documents/logs/*/daily-report

} >$report


cat $report  | send 'mark.b.seaman@gmail.com' "Seaman Daily News"

