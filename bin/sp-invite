#!/bin/bash
# Invite someone to Spiritual email
echo Inviting $1

#Check for message
[[ ! -f $y/SpiritualLog/PrayerPals ]] && echo "Could not find,  $y/Spiritual/PrayerPals" && exit 0

# Send the text message
paragraphs $y/SpiritualLog/PrayerPals | send "$1" "Prayer pals"

# Remember for later
echo $1 >> $br/SpiritualInvited

