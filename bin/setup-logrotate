#!/bin/bash
# Configure log rotation for this machine

cat <<EOF > /etc/logrotate.d/seaman
# /etc/logrotate.d/seaman

/home/seaman/Documents/logs/*/*.log {

     # how often to rotate
     daily

     # max num of log files to keep      
     rotate 7

     # don't panic if the log file doesn't exist
     missingok

     # ignore empty files
     notifempty 

     # no idea what it does, but it's in all examples
     sharedscripts 

     # needed for forever to work properly
     copytruncate  

     # adds date to filename
     dateext   
     dateformat .%Y-%m-%d
}

EOF

echo "Usage: sudo $0"
