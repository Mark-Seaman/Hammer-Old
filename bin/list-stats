#!/usr/bin/python
# Show the stats for this list

from sys import stdin

# Read text into an array of lines
def read_input():
    return  [line[:-1] for line in stdin.readlines()]

# Split each line into columns (using ' ')
def create_table(text):
    return map (lambda x: x.split(' '), text)  

# Select a column of numbers
def column(table,num):
    return map(lambda x: int(x[num]), table)

# Total the second column
def total(table):
    return reduce(lambda x,y: x+y, table)

# Find the largest value
def maximum(values):
    m = values[0]
    for x in values:  m = max(x,m)
    return m

# Find the smallest value
def minimum(values):
    m = values[0]
    for x in values:  m = min(x,m)
    return m


# Read in the table and segment into columns
table = create_table(read_input())
col1 = column(table,1)
col2 = column(table,2)

# Calculate stats
totals = total (col1), total (col2)
mx = maximum (col1), maximum (col2)
mn = minimum (col1), minimum (col2)

# Print out the stats
print 'Totals  = ', totals[0], totals[1]
print 'Average = ', totals[0]/len(table), totals[1]/len(table)
print 'Maximum = ', mx[0], mx[1]
print 'Minimum = ', mn[0], mn[1]
