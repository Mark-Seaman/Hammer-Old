#!/bin/bash
# Prune the following list of files so that they are not 
# propogated while doing synchronization.

dir=/home/seaman/Documents/Brain
if [ "$1" != "" ]
then
    dir=$1
fi

if [ ! -d $dir ] 
then
    echo "Directory not found, $dir"
    exit 1
fi

cd $dir
(

rm *~ */*~
rm */*#* */.#*

xargs rm -rf << EOL
AgileSoftware
GoDaddyDomains
NoVendNoChange
BiggestProgrammingMistakes 
MasterProgammer
JapanItinerary
Hotel
MarkSeaman
ProvenPractices
IdeaLifecycle
EOL

) &> /dev/null

