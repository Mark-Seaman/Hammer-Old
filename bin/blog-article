#!/bin/bash
# Show the formatted blog article

article="$1" && [[ "$1" == "" ]] && { echo 'No article';    exit; }  # Select the article
blog='SeamansLog' && [[ "$2" != "" ]] &&  blog=$2                    # Select the blog

echo Sending  article:$article,  blog:$blog

[[ ! -f "$y/$blog/$article" ]] && { echo 'Article not found' "$y/$blog/$article"; exit; }

paragraphs $y/$blog/$article
