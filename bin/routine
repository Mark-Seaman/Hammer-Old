#!/usr/bin/env python
# Daily Startup Routine automation

from os import system
from time import sleep
from sys import argv


# Open a file and ding
def start_task(task):
    system ('play ~/bin/DING.WAV &> /dev/null')
    system (task)
    sleep(180)

# Run a list of files 
def run_all_tasks():
    files = 'work'
    if len(argv)>1: 
        files = argv[1]
    script_files = open('/home/seaman/bin/routine-'+files).read().split('\n')[:-1]
    for t in script_files:
        start_task(t)
   
# Build a daily routine
print 'Daily Startup Routine automation'
run_all_tasks()
   
