#!/bin/bash
# Post to facebook through email

# Select the text to post
text=$1
[[ "$text" == "" ]] && text=`cat /tmp/mb-passage`
[[ "$text" == "" ]] && echo "usage: $0 'text to post'" && exit 1

echo Post to facebook through email:
cat  /tmp/mb-passage

# Post using email
echo | send ether644gappy@m.facebook.com "$text"