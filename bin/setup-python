#!/bin/bash
# Setup the Python Evironment

# Create a Python virtualenv for Python 3
virtualenv --no-site-packages --distribute -p python3.4 env

# Activate the virutalenv
. env/bin/activate


# Install Django and support libraries
pip install celery redis nose
pip install cookiecutter
pip install django-floppyforms
pip install Django==1.7.3 
pip install docopt
pip install mkdocs
pip install pandocs
pip install requests
pip install tox

