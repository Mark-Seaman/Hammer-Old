#!/usr/bin/env python
# Send a homework assignment


from os import system,environ
from sys import argv
from random import choice

task_dir = environ['HOME']+'/Documents/Tasks/'

if len(argv)>1:
    print "Create task", argv[1]
    f = open(task_dir+argv[1], 'w')
    f.write(' '.join(argv[2:]))
    f.close()
    system ('e '+task_dir+argv[1])
else:
    print "Send a homework assignment"
    from os import listdir
    f = choice(listdir(task_dir))
    system ('evernote '+task_dir+f)
