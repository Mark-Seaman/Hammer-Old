#!/bin/bash
# Show the disk usage in certain directories

echo '-----------------------------------------------' 
echo "Disk space"
echo '-----------------------------------------------' 
df -h /
du -sh ~ $u  ~/wme ~/Archive ~/Tools
du -sh  ~/LiveSync ~/LiveSync/Git ~/LiveSync/Archive

exit

# Reusable space finder
function show_hogs {
    cd /home/seaman/LiveSync
    if [ -d "$1/" ]
    then
        echo "-----------------------------------"
        echo "Space for $1"
        echo "-----------------------------------"
        du --max-depth=3 --exclude=.gvfs --exclude=platform-git $1 | sort -nr | head -20
    fi
}

# Show the summary of total space
function summary {
    pattern=$1
    egrep "$pattern" /home/seaman/Documents/logs/space.log  | 
    awk '{print $1/1000000.0, " GB", $2}'
}


# Search for the different chunks of space to watch
{
    echo '----------------------------------------' 
    date

    show_hogs /home/seaman 
    show_hogs Archive 
    show_hogs Pictures 
    show_hogs Music 

    date
    echo '----------------------------------------' 
}  2>&1 | mklog space

