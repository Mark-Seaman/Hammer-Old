#!/bin/bash
# Search for content in the brain (alias bs)

bs=$br/.BrainSearchOutput
echo '* Brain Search Output*               -*-muse-*-' > $bs

# Search Brain files
grep -ir "$1" $br | 
sed 's/^.*\/Brain\/\([a-zA-Z0-9\/\_\-]*\)/[[\/home\/seaman\/Documents\/Brain\/\1]]/' |
grep -v 'js\|css\|xml' >> $bs

# Search MyBook
grep -ir "$1" /home/seaman/Documents/MyBook | 
sed 's/^.*\/MyBook\/\([a-zA-Z0-9\/\_\-]*\)/[[\/home\/seaman\/Documents\/MyBook\/\1]]/' |
grep -v 'js\|css\|xml' >> $bs

e $bs
