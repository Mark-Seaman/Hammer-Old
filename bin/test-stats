#!/bin/bash
# Test the list-stats script
echo Test the list-stats script

# Create sample input for the list-stats script
cat <<EOF > /tmp/list-stats-input
01-05 142 59
02-05 345 9959
03-05 43 11
04-05 20 -62
EOF

# Create sample output
cat <<EOF > /tmp/list-stats-output
Totals  =  550 9967
Average =  137 2491
Maximum =  345 9959
Minimum =  20 -62
EOF

# Run the conversion script
list-stats < /tmp/list-stats-input > /tmp/list-stats-output2

# Compare the actual and expected output
diff /tmp/list-stats-output /tmp/list-stats-output2
