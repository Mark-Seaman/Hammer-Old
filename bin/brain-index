#!/usr/bin/python
# Create a new Index for all topics in brain

from os import system

def do_command(command):
   system("n=/home/seaman/Documents/Brain; "+command)

print 'Welcome, to the outer brain'
print 'Creating new index'
filter1='|egrep -v \'~$\''
filter2='|sed \'s/.*/[[&][&]]/\''
do_command("echo '* Index of All Topics * -*-muse-*-' > $n/.Index")
do_command("ls $n"+filter1+filter2+" >> $n/.Index")
do_command("brain-edit .Index")
