#!/usr/bin/env python

from platform import node
from os import system
from sys import argv


# Setup argument
if len(argv)>1:
    page = argv[1]
    if not page.startswith('http://') and not page.startswith('https://'):
        page = 'http://' + page
else:
    page = 'http://seamanslog.com'

# Use the correct invocation
if 'mac' in node():
    system('open -a "Google Chrome" '+page)
else:
    system('rbg google-chrome '+page)
